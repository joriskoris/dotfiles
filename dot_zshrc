export EDITOR=nvim

# antidote zsh plugin manager
source '/usr/share/zsh-antidote/antidote.zsh'
antidote load

# nvm
source /usr/share/nvm/init-nvm.sh
# pyenv
export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init - zsh)"

eval "$(starship init zsh)"

# The next line updates PATH for the Google Cloud SDK.
if [ -f '/home/joris/.random/google-cloud-sdk/path.zsh.inc' ]; then . '/home/joris/.random/google-cloud-sdk/path.zsh.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '/home/joris/.random/google-cloud-sdk/completion.zsh.inc' ]; then . '/home/joris/.random/google-cloud-sdk/completion.zsh.inc'; fi


[[ "$PATH" == *"$HOME/bin:"* ]] || export PATH="$HOME/bin:$PATH"
! { which werf | grep -qsE "^/home/joris/.trdl/"; } && [[ -x "$HOME/bin/trdl" ]] && source $("$HOME/bin/trdl" use werf "2" "stable")

secrets ()
{
  export DIGITALOCEAN_TOKEN=$(pass do/default)
  export CLOUDFLARE_API_TOKEN=$(pass cloudflare/default)
  export WERF_SECRET_KEY=$(pass werf)
}
